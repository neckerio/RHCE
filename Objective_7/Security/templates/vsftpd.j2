#This will give any anonymous user read/write privileges without a password.
#DO NOT USE IN A SERIOUS ENVIRONMENT

anonymous_enable=YES
local_enable=YES
write_enable=YES
local_umask=022
dirmessage_enable=YES
xferlog_enable=YES
connect_from_port_20=YES
ftp_data_port=2020
listen_port=2121
xferlog_std_format=YES
listen=NO
listen_ipv6=YES
#listen_address6=::
#apparently, if pasv is used I should just use listen and comment out IPV6
#add boolean to allow ftp_home_dirs?
#ip_conntrack_ftp in /etc/sysconfig/iptables-config
pasv_enable=NO

pam_service_name=vsftpd
userlist_enable=YES
check_shell=NO

anon_mkdir_write_enable=YES
anon_other_write_enable=YES
anon_upload_enable=YES
anon_world_readable_only=NO
no_anon_password=YES
anon_root=/var/ftp

allow_writeable_chroot=YES
