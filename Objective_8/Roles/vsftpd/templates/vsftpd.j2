#This will give any anonymous user read/write privileges without a password.
#DO NOT USE IN A SERIOUS ENVIRONMENT

anonymous_enable=YES
local_enable=YES
write_enable=YES
local_umask=022
dirmessage_enable=YES
xferlog_enable=YES
connect_from_port_20=YES
ftp_data_port=2020
listen_port=2121
xferlog_std_format=YES
listen=NO
listen_ipv6=YES


pasv_enable=YES
pasv_max_port=3200
pasv_min_port=3100


pam_service_name=vsftpd
userlist_enable=YES


anon_mkdir_write_enable=YES
anon_other_write_enable=YES
anon_upload_enable=YES
anon_world_readable_only=NO
no_anon_password=YES
anon_root=/var/ftp
